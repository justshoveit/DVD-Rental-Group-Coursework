@model SAMS.Models.StudentModuleMapping

@{
    ViewBag.Title = "Create";
}

<h2>Student-Module Mapping Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.StudentId, "StudentId", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StudentId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ModuleId, "ModuleId", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("ModuleId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ModuleId)
            </div>
        </div>

        <div class="form-group col-md-12">
            <div class=" col-md-offset-2 col-md-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div id="divMessage" style="line-height:5px" class=" col-md-8">
                @ViewBag.Message
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
        $(document).ready(function () {


            var message = '@ViewBag.Message';
            if (!(message == null || message == '' || message == undefined)) {
                $("#divMessage").addClass('alert alert-danger');
                $(".alert").fadeOut(3000);
            }
        });
</script>
}
