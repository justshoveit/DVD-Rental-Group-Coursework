@model SAMS.Models.TeacherReport


@using (Html.BeginForm("Details", "TeacherReport"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Teacher Report</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">

            <div class="form-group">
                @Html.LabelFor(model => model.TeacherId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.TeacherTypeId, (IEnumerable<SelectListItem>)ViewBag.TeacherTypeDDL, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SemesterName)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Show Report" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
