@model SAMS.Models.Course

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-4" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control col-md-4" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group col-md-12">
            <div class=" col-md-offset-2 col-md-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div id="divMessage" style="line-height:5px" class=" col-md-8">
                @ViewBag.Message
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
        $(document).ready(function () {


            var message = '@ViewBag.Message';
            if (!(message == null || message == '' || message == undefined)) {
                $("#divMessage").addClass('alert alert-danger');
                $(".alert").fadeOut(3000);
            }
        });
</script>
}
